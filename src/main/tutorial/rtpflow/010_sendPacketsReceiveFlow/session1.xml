    <createListenpointRTP name="inviter" localHost="[localHostRTP(0)]" localPort="[localPortRTP]"/>

    <parameter name="[testcase:SEM1]" operation="system.semaphorewait" value2="2"/>

    <pause name="wait between RTP packet" seconds="0.1"/>
