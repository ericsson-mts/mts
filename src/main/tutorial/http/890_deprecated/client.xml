<scenario>

	<sendRequestHTTP name="Send POST" server="http://[remoteHTTP]">
		<!--******************* BEGIN MESSAGE ********************-->
<![CDATA[
POST http://[remoteHTTP] HTTP/1.1
Host: [remoteHTTP]
Accept-charset: text/html
